<style type="text/css">
	a:hover {color: #888;}
</style>
<div class="container marketing">
	<h1>Requests</h1>
	<ul class="nav nav-tabs">
	  	<li class="active"><a href="#Dominion" data-toggle="tab">Dominion Virginia Power</a></li>
	  	<li><a href="#CvilleGas" data-toggle="tab">Charlottesville Gas</a></li>
	  	<li><a href="#WashingtonGas" data-toggle="tab">Washington Gas</a></li>
	</ul>
	<script>
	$('#myTab a[href="#CvilleGas"]').click(function (e) {
	  	e.preventDefault()
	  	$(this).tab('show')
	})
	$('#myTab a[href="#WashingtonGas"]').click(function (e) {
	  	e.preventDefault()
	  	$(this).tab('show')
	})
	</script>
	<div class="tab-content">
		<div class="tab-pane active" id="Dominion">
			<div class="row">
				<div class="col-lg-6">
					<h4>Utility Request for Dominion Virginia Power Customers</h4>
				</div>
				<div class="col-lg-3">
					<%= button_to "Generate HTML View", requests_dominion_request_accounts_path, :remote => true, :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
				<div class="col-lg-3">
					<%= button_to "Export to CSV", requests_dominion_request_accounts_path(:format => "csv"), :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
			</div>
			<div id="dominion_req"></div>
						</br>	
		</div>

		<div class="tab-pane" id="CvilleGas" href="#CvilleGas">
			<div class="row">
				<div class="col-lg-6">
					<h4>Utility Request for Charlottesville Gas Customers</h4>
				</div>
				<div class="col-lg-3">
					<%= button_to "Generate HTML View", requests_cvillegas_request_accounts_path, :remote => true, :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
				<div class="col-lg-3">
					<%= button_to "Export to CSV", requests_cvillegas_request_accounts_path(:format => "csv"), :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
			</div>
			<div id="cvillegas_req"></div>		
			</br>
		</div>

		<div class="tab-pane" id="WashingtonGas" href="#WashingtonGas">
			<div class="row">
				<div class="col-lg-6">
					<h4>Utility Request for Washington Gas Customers</h4>
				</div>
				<div class="col-lg-3">
					<%= button_to "Generate HTML View", requests_washingtongas_request_accounts_path, :remote => true, :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
				<div class="col-lg-3">
					<%= button_to "Export to CSV", requests_washingtongas_request_accounts_path(:format => "csv"), :method => "get", type: 'button', class: 'btn btn-primary center-block', style: 'margin-top:5px; margin-bottom:10px;' %>
				</div>
			</div>
			<div id="washingtongas_req"></div>		
			</br>
		</div>
	</div>
</div>		
		
