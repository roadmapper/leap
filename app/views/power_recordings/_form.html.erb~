<%= form_for(@power_recording) do |f| %>
  <% if @power_recording.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@power_recording.errors.count, "error") %> prohibited this power_recording from being saved:</h2>

      <ul>
      <% @power_recording.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :acctNum %><br />
    <%= f.text_field :acctNum %>
  </div>
  <div class="field">
    <%= f.label :readDate %><br />
    <%= f.date_select :readDate %>
  </div>
  <div class="field">
    <%= f.label :daysElapsed %><br />
    <%= f.text_field :daysElapsed %>
  </div>
  <div class="field">
    <%= f.label :totalKwh %><br />
    <%= f.text_field :totalKwh %>
  </div>
  <div class="field">
    <%= f.label :property %><br />
    <%= f.text_field :property %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
