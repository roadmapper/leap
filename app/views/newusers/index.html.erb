<!--Manage Users page -->
<div class="container">
	<% provide(:title, 'Sign up') %>
	<h1>Create New User</h1>
	<!--Form to create a new user.  Available fields:  email, password, and password confirmation -->
	<div class="form-inline" role = "form">
    		<%= form_for(@user) do |f| %>

      			<%= f.label :email %><br>
      			<%= f.text_field :email %>
			<br>
      			<%= f.label :password %><br>
      			<%= f.password_field :password %>
			<br>
		        <%= f.label :password_confirmation, "Confirmation" %><br>
      			<%= f.password_field :password_confirmation %>
			<br><br>
      			<%= f.submit "Create Account", class: "btn btn-large btn-primary" %>
    		<% end %>
	</div>
	<br>
	<!--This table shows all existing users' emails. -->
	<h1>Existing Users</h1>
	<table class="table table-striped">
  		<tr>
	    		<th>User Email</th>
	    		<th></th>
	    		<th></th>
	    		<th></th>
  		</tr>
		<!--for each existing user, display their email and a destroy button -->
		<% @userlist.each do |user| %>
	  		<tr>
		    		<td><%= user.email %></td>
		    		<td><%= link_to "Destroy User", user, method: :delete, data: { confirm: "You sure?" } %></td>
	  		</tr>
		<% end %>
	</table>

	<br />
</div>
