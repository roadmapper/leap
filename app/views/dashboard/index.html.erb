					<%= submit_tag("Search", class: 'btn btn-primary') %>
					<% end %>
				</div>
			</div>
		</div>

    
<%= javascript_tag "var variables = #{ @variables.to_json };" %>    

<script>

$('.typeahead').typeahead({
    name: 'properties',
