					<%= image_tag "logo.png", class: "img-responsive" %>
				</div>
				<div class="col-lg-6">
					<h2>Search Properties:</h2>
					<%= form_tag dashboard_property_report_path, class: "form-inline", :method => "get" do %>
					<%= label_tag(:owner,"") %>
