			  			<% r_month = r_date.month %>
			  			<% r_year = r_date.year %>
			  			<% curr_month= @months[j].month %>
			  			<% curr_year= @months[j].year %>
			  			<% if(curr_month == r_month && curr_year == r_year && @gas_recordings[i].consumption != 0) %>
			  				<td bgcolor="11F215">
			  					<%=@gas_recordings[i].consumption%>
