			  				<%lastChecked = j+1%>
			  				<%break%>
				  		<% elsif (curr_month == r_month && curr_year == r_year && @gas_recordings[i].consumption == 0) %>
							<td bgcolor="FFD700">
			  					<%=@gas_recordings[i].consumption%>
			  				</td>
			  				<%lastChecked = j+1%>
			  				<%break%>
			  			<%elsif curr_month != r_month && curr_year != r_year%>
